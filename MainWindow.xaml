                        </ComboBoxItem>
                    </ComboBox>
                    <Label x:Name="debug_nv1" Content=" " HorizontalAlignment="Left" Margin="110,297,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="29" Width="654"/>
