<Window x:Class="System_Init_Toolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Init_Toolbox"
        mc:Ignorable="d"
        Title="System Init Toolbox" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True" Icon="/appicon.png" ResizeMode="CanMinimize" SizeToContent="Manual">
    <Grid>
        <TabControl>
            <TabItem Header="系统信息">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="Label_System_Version" Content="系统版本：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,142,0,0"/>
                    <Label x:Name="Label_System_BuildLabEx" Content="系统BuildLabEx：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,172,0,0"/>
                    <Label x:Name="Label_System_Build" Content="系统build号：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,202,0,0"/>
                    <Label x:Name="Label_System_Edition_ID" Content="系统版本ID：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,232,0,0"/>
                    <Label x:Name="Label_System_Product_ID" Content="系统ProductID：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,262,0,0"/>
                    <Label x:Name="Label_System_DigitalProduct_Id" Content="DigitalProductId：N/A" HorizontalAlignment="Center" VerticalAlignment="Top" Width="540" Height="25" Cursor="AppStarting" HorizontalContentAlignment="Center" Margin="0,292,0,0"/>
                    <Image HorizontalAlignment="Left" Height="59" Margin="371,54,0,0" VerticalAlignment="Top" Width="62" Stretch="None" Source="/win11-logo.png"/>
                </Grid>
            </TabItem>
            <TabItem Header="硬件信息">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="驱动">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="运行库" Background="#FFE5E5E5">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="153*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="Office">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="DirectX">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="软件">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="设置">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="关于">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
