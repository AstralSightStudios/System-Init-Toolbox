                    <ui:HyperlinkButton NavigateUri="https://github.com/sourcechord/FluentWPF" Height="33" VerticalAlignment="Top" Content="sourcechord/FluentWPF" Margin="515,221,0,0" FontFamily="Source Han Sans SC"/>
                    <Label Content="[开发测试版本]  Debug 1.0" HorizontalAlignment="Left" Margin="265,167,0,0" VerticalAlignment="Top" FontFamily="Source Han Sans SC" FontSize="12"/>
                    <Label Content="Build2" HorizontalAlignment="Left" Margin="500,167,0,0" VerticalAlignment="Top" FontFamily="Source Han Sans SC" FontSize="12"/>
